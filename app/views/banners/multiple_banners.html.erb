<% if !@banners[0].nil? %>
	<div class="promotions">
	  <div class="promotions_up">
	  <h1><%= link_to @banners[0].title, "#" %></h1>
	  </div>
	  <div class="promotions_middle">
	    <a href="#"><%= image_tag(@banners[0].banner_image.attachment.url(:original), :width => "198px", :height => "146px", :border => 0)%></a>
	    <p><%= @banners[0].description.html_safe %></p>
	    <p><a href="#">Read More</a></p>
	  </div>
	  <div class="promotions_end"></div>
	</div>
<% end %>
<% if !@banners[1].nil? %>
	<div class="special_package">
	  <div class="special_package_title">
	    <h1><%= link_to @banners[1].title, "#" %></h1>
	  </div>
	  <div class="special_package_text">
	    <a href="#"><%= image_tag(@banners[1].banner_image.attachment.url(:original), :width => "198px", :height => "146px", :border => 0)%></a>
	    <p><%= @banners[1].description.html_safe %></p>
	    <div class="read_more"><a href="#">Read More</a></div>
	  </div>						
	  <div class="special_package_end"></div>
	</div>
<% end %>

