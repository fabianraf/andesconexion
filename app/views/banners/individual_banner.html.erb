<% if !@banners[0].nil? %>
	<div class="banner">
	  <div class="banner_title">
	   <h1><%= link_to @banners[0].title, "#" %></h1>
	  </div>
	<div class="banner_middle"> 
	  <a href="#"><%= image_tag(@banners[0].banner_image.attachment.url(:original), :width => "198px", :height => "146px", :border => 0)%></a>
	  <p><%= @banners[0].description.html_safe[0, 130]  %></p>
	  <p><a href="#">Read More</a></p>
	</div>
	<div class="banner_end"></div>
	</div>
<% end %>