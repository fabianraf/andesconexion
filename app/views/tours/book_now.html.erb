<% content_for :page_specific_javascript do %>
  <%= javascript_include_tag "tours" %>  
 <% end %>

<div id="main_information">
  <div id="information_content">
  <table width="956" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
    <td align="left" valign="top">
      <div class="left">
        <div class="path_navigation">
          <ul>
            <li><%= link_to "Home", root_path %></li>
          </ul>
        </div>
        <div class="main_text">
					<h1><%= @tour.name %></h1>
          <!-- Message Error -->
          <% if @book.errors.any? %>
            <div class="msg msg-error">
               <% @book.errors.full_messages.each do |msg| %>
                 <p><strong><%= msg %></strong></p>
               <% end %>
            </div>
          <% end %>
          <!-- End Message Error -->
          <%= form_for([@book], :url => create_book_tours_path) do |f| %>
            <%= render :partial => "form", :object => f %>
    		    <div class="book_now">
      		    <%= link_to "BOOK NOW!", "#", :id => "submit_book_now" %>
      		  </div>
						
            
          <% end %>
        </div>
      </div>
</td>
        <td align="left" valign="top">
          <div class="right">
            <div class="section_menu">
              <div class="section_menu_up">
              <h1>IN THIS SECTION</h1>
              </div>
            <div class="section_menu_middle">
              <ul>
                <% @tour.category.tours.each do |tour| %>
                  <li><%= link_to tour.name, tours_path(tour.category.parent.name, tour.category, tour) %></li>
                <% end %> 		    
              </ul>
            </div>
              <div class="section_menu_end"></div>
            </div>
            <%= render :template => "last_minute_offers/multiple_banners", :banners => @banners %>
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>
