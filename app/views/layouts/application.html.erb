        </div>
      <div class="top_menu">
        <ul id="nav">
          <% @categories.each do |category| %>
                <li class="top">
                  <%= link_to content_tag(:span, category.name, {:class => "down"}), first_level_category_path(category), :class => "top_link", :id => "Ecuador_Tours" %>
