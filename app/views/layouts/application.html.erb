            </div>
            <div class="top_links">
              <ul>
								<% @standalone_pages.each do |standalone_page| %>
			            <li><%= link_to standalone_page.name, standalone_page_path(standalone_page)%> </li>
			          <% end %>
                <li><%= link_to "Contact us", contact_us_path %></li>
              </ul>
            </div>
          </div>
        </div>
       
        <div id="menu">
          <ul class="menu">
            <% @categories.each do |category| %>
              <li <% if @category.present? && category.cached_slug == @category.cached_slug %> class="active" <% end %>>
                <%= link_to content_tag(:span, category.name), first_level_category_path(category), :class => "prent" %>
                <div>
                  <ul>
                    <% for sub_category in category.children %>
                      <li><%= link_to content_tag(:span, sub_category.name), nested_categories_path(category, sub_category), :class => "parent" %>
                        <div>
                          <ul>
                            <% sub_category.tours.each do |tour| %>
                              <li>
                                <%= link_to content_tag(:span, tour.name), tours_path(category, sub_category, tour) %>
                              </li>
                            <% end %>
                          </ul>
                        </div>
                      </li>
                   
                    <% end %>
                    
                  </ul>
                </div>
              
              </li>
              
            <% end %>
          </ul>
        </div>
     
    
        	
    </div>
