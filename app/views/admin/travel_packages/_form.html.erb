    <td><%= form.text_field :ten_to_fifteen_pax, :class => "small-text-box" %></td>
    <td><%= form.text_field :sixteen_to_twentyfive_pax, :class => "small-text-box" %></td>
    <td><%= form.text_field :five_to_nine_pax, :class => "small-text-box" %></td>
    <td><%= form.text_field :twenty_more_pax, :class => "small-text-box" %></td>
  </tr>
</table>




