  <tr colspan=12> 
    <td><%= form.text_field :one_pax_g_or_d, :class => "small-text-box" %></td>
    <td><%= form.text_field :two_pax_g_or_d, :class => "small-text-box" %></td>
    <td><%= form.text_field :three_pax_g_or_d, :class => "small-text-box" %></td>
    <td><%= form.text_field :one_pax_g_and_d, :class => "small-text-box" %></td>
    <td><%= form.text_field :two_pax_g_and_d, :class => "small-text-box" %></td>
