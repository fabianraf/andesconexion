<!-- Small Nav -->
<div class="small-nav">
        <a href="#">Dashboard</a>
        <span>&gt;</span>
        Hotel
</div>
<!-- End Small Nav -->

<!-- Message Error -->
<% if @hotel.errors.any? %>
  <div class="msg msg-error">
     <% @hotel.errors.full_messages.each do |msg| %>
       <p><strong><%= msg %></strong></p>
     <% end %>
  </div>
<% end %>
<!-- End Message Error -->
<br />
<!-- Main -->
<div id="main">
        <div class="cl">&nbsp;</div>

        <!-- Content -->
        <div id="content">
          <!-- Box -->
          <div class="box">
            <!-- Box Head -->
            <div class="box-head">
              <h2 class="left">Edit Hotel</h2>
            </div>
            <!-- End Box Head -->
            <%= form_for([:admin, @hotel]) do |f| %>
              <%= render :partial => "form", :object => f %>
              <div class="buttons">
                  <%= f.submit "Save" %>
                  <%= link_to "Cancel", admin_hotels_path %>
              </div>
            <% end %>
          </div>
          <!-- End Box -->
        </div>
        <!-- End Content -->
        <!-- Sidebar -->
        <div id="sidebar">
          <!-- Box -->
          <div class="box">
            <!-- Box Head -->
            <div class="box-head">
              <h2>Management</h2>
            </div>
            <!-- End Box Head-->
            <div class="box-content">
              <%= link_to(content_tag(:span, "Add new Hotel"), new_admin_hotel_path, :class => 'add-button') %>
              <%= link_to(content_tag(:span, "Delete Hotel"), admin_hotel_path(@hotel), :confirm => 'Are you sure?', :method => :delete, :title => 'Delete Hotel') %>
              <div class="cl">&nbsp;</div>
            </div>
          </div>
          <!-- End Box -->
        </div>
        <!-- End Sidebar -->

        <div class="cl">&nbsp;</div>			
</div>
<!-- Main -->
	