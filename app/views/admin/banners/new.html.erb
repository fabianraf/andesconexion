<% content_for :page_specific_javascript do %>
  <%= javascript_include_tag "top_menu/effects.js" %>
<% end %>
<!-- Small Nav -->
<div class="small-nav">
        <a href="#">Dashboard</a>
        <span>&gt;</span>
        Banners
</div>
<!-- End Small Nav -->

<!-- Message Error -->
<% if @banner.errors.any? %>
  <div class="msg msg-error">
     <% @banner.errors.full_messages.each do |msg| %>
       <p><strong><%= msg %></strong></p>
     <% end %>
  </div>
<% end %>
<!-- End Message Error -->
<br />
<!-- Main -->
<div id="main">
  <div class="cl">&nbsp;</div>

  <!-- Content -->
  <div id="content">
    <!-- Box -->
    <div class="box">
      <!-- Box Head -->
      <div class="box-head">
              <h2>Add New Banner</h2>
      </div>
      <!-- End Box Head -->
      <%= form_for([:admin, @banner]) do |f| %>
        <%= render :partial => "form", :object => f %>
        <div class="buttons">
            <%= f.submit "Save" %>
            <%= link_to "Cancel", admin_banners_path %>
        </div>
      <% end %>
    </div>
    <!-- End Box -->
  </div>
  <!-- End Content -->
  <!-- Sidebar -->
  <div id="sidebar">

    <!-- Box -->
    <div class="box">

      <!-- Box Head -->
      <div class="box-head">
              <h2>Management</h2>
      </div>
      <!-- End Box Head-->

      <div class="box-content">
        <a href="#" class="add-button"><span>Add new Banner</span></a>
        <div class="cl">&nbsp;</div>

        <p class="select-all"><input type="checkbox" class="checkbox" /><label>select all</label></p>
        <p><a href="#">Delete Selected</a></p>


      </div>
    </div>
    <!-- End Box -->
  </div>
  <!-- End Sidebar -->

  <div class="cl">&nbsp;</div>			
</div>
<!-- Main -->
	