<!-- Small Nav -->
<div class="small-nav">
        <a href="#">Dashboard</a>
        <span>&gt;</span>
        standalone_page
</div>
<!-- End Small Nav -->

<!-- Message Error -->
<% if @standalone_page.errors.any? %>
  <div class="msg msg-error">
     <% @standalone_page.errors.full_messages.each do |msg| %>
       <p><strong><%= msg %></strong></p>
     <% end %>
  </div>
<% end %>
<!-- End Message Error -->
<br />
<!-- Main -->
<div id="main">
  <div class="cl">&nbsp;</div>

  <!-- Content -->
  <div id="content">
    <!-- Box -->
    <div class="box">
      <!-- Box Head -->
      <div class="box-head">
              <h2>Add New Standalone Page</h2>
      </div>
      <!-- End Box Head -->
      <%= form_for([:admin, @standalone_page]) do |f| %>
        <%= render :partial => "form", :object => f %>
        <div class="buttons">
            <%= f.submit "Save" %>
            <%= link_to "Cancel", admin_standalone_pages_path %>
        </div>
      <% end %>
    </div>
    <!-- End Box -->
  </div>
  <!-- End Content -->
  <!-- Sidebar -->
  <div id="sidebar">

    <!-- Box -->
    <div class="box">

      <!-- Box Head -->
      <div class="box-head">
              <h2>Management</h2>
      </div>
      <!-- End Box Head-->

      <div class="box-content">
        <a href="#" class="add-button"><span>Add new Article</span></a>
        <div class="cl">&nbsp;</div>

        <p class="select-all"><input type="checkbox" class="checkbox" /><label>select all</label></p>
        <p><a href="#">Delete Selected</a></p>

        <!-- Sort -->
        <div class="sort">
          <label>Sort by</label>
          <select class="field">
                  <option value="">Title</option>
          </select>
          <select class="field">
                  <option value="">Date</option>
          </select>
          <select class="field">
                  <option value="">Author</option>
          </select>
        </div>
        <!-- End Sort -->

      </div>
    </div>
    <!-- End Box -->
  </div>
  <!-- End Sidebar -->

  <div class="cl">&nbsp;</div>			
</div>
<!-- Main -->
	