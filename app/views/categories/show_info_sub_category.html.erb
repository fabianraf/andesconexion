<% content_for :page_specific_javascript do %>
  <%= javascript_include_tag "jquery.bxSlider.min.js" %>
  <script>
    $(document).ready(function() {
      $('#slider1').bxSlider({
      infiniteLoop: false,
      hideControlOnEnd: true
      });
    });
  </script>
<% end %>
<div id="main_information">
  <div id="information_content">
    <table width="956" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr>
        <td align="left" valign="top">
          <div class="left">
            <div class="path_navigation">
              <ul>
                <li><a href="/">Home</a></li>
                <li><%= link_to @category.name, "#" %></li>
              </ul>
            </div>
              <div class="main_text">
                <h1><%= @category.name %></h1>
                <h2>Overview</h2>
                <p><%= @category.description unless @category.description.nil? %></p>
                
                
                <% @category.tours.each do |tour| %>
                  <% unless tour.nil? %>
                    <div class="views-row views-row-1 views-row-odd views-row-first">
                      <div class="ata-teaser teaser-product js-link node node-1076 ata-tour-itinerary teaser odd">

                        <div class="teaser-content">
                          <div class="r2ght">
                            <h2><%= link_to tour.name, tours_path(@parent_category, @category, tour) %></h2>
                            	<%= tour.overview %>
                          </div>
                          <div class="l2ft teaser-hero">
                            <%= image_tag(tour.main_tour_image.attachment.url, :width => '187px', :height => "105px", :border => 0) %>
                            <span class="hero-corner"></span>
                          </div>
                          <div class="cl">&nbsp;</div>
                        </div>
                        <div class="teaser-categories enhanced-grey">
                          <span class="ata-prices from-price"><span class="ata-price currency-aud active" style="display: block;"><span class="currency-code">Price: </span><span class="price"><%= tour.prices %></span></span><span class="ata-price currency-eur" style="display: none;"><span class="currency-code">EUR </span><span class="price">€1185.00</span></span><span class="ata-price currency-gbp" style="display: none;"><span class="currency-code">GBP </span><span class="price">£955.00</span></span></span>    <span class="category">Style: Unleashed 18-39</span>
                          <span class="category">Fitness: Moderate</span>
                          <div class="cl">&nbsp;</div>
                        </div>
                        <div class="teaser-cta">
                          <%= link_to "View Tour", tours_path(@parent_category, @category, tour), :class => "cta-button" %>    		» <%= link_to "Book Now!", book_now_tour_path(tour), :class => "sibling"%> 	
                        </div>
                     </div>  
                    </div>
                
                 <% end %>
                <% end %>
                
            </div>
        </td>
        <td align="left" valign="top">
          <div class="right">
            <div class="section_menu">
              <div class="section_menu_up">
              <h1>IN THIS SECTION</h1>
              </div>
            <div class="section_menu_middle">
              <ul>
                <% @category.tours.each do |tour| %>
                  <li><%= link_to tour.name, tours_path(tour.category.parent, tour.category, tour) %></li>
                <% end %> 		    
              </ul>
            </div>
              <div class="section_menu_end"></div>
            </div>
            <%= render :template => "last_minute_offers/multiple_banners", :banners => @banners %>
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>