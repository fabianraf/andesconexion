<% content_for :page_specific_javascript do %>
  <%= javascript_include_tag "jquery.bxSlider.min.js" %>
  <script>
    $(document).ready(function() {
      $('#slider1').bxSlider({
      infiniteLoop: false,
      hideControlOnEnd: true
      });
    });
  </script>
<% end %>
<div id="main_information">
  <div id="information_content">
    <div class="left">
       <div class="path_navigation">
         <ul>
           <li><a href="/">Home</a></li>
           <li><%= link_to @category.name, first_level_category_path(@category) %></li>
         </ul>
       </div>
         <div class="main_text">
           <h1><%= @category.name %></h1>
           <h2>Overview</h2>
           <p><%= @category.description unless @category.description.nil? %></p>
           
					 
					 
					 <% @category.children.each do |sub_category| %>
              <div class="views-row views-row-1 views-row-odd views-row-first">
                <div class="ata-teaser teaser-product js-link node node-1076 ata-tour-itinerary teaser odd">

                  <div class="teaser-content">
                    <div class="r2ght">
                      <h2><%= link_to sub_category.name, "" %></h2>
                      	<%= sub_category.brief_description %>
                    </div>
                    <div class="l2ft teaser-hero">
                      <%= image_tag(sub_category.category_image.attachment.url(:original), :width => '187px', :height => "105px", :border => 0) %>
                      <span class="hero-corner"></span>
                    </div>
                    <div class="cl">&nbsp;</div>
                  </div>
                  <div class="teaser-categories enhanced-grey">
                    <span class="ata-prices from-price">
											<span class="ata-price currency-aud active" style="display: block;">
												<span class="currency-code">
													Price: 
												</span>
												<span class="price">
													<%#= tour.prices %>
												</span>
											</span>
											<span class="ata-price currency-eur" style="display: none;">
												<span class="currency-code">
													EUR 
												</span>
												<span class="price">
													€1185.00
												</span>
											</span>
											<span class="ata-price currency-gbp" style="display: none;">
												<span class="currency-code">
													GBP 
												</span>
												<span class="price">
													£955.00
												</span>
											</span>
										</span>
										<span class="category">
											Style: Unleashed 18-39
										</span>
                    <span class="category">
											Fitness: Moderate
										</span>
                    <div class="cl">&nbsp;</div>
                  </div>
                  <div class="teaser-cta">
                    <%= link_to "View Tours", nested_categories_path(sub_category.parent, sub_category), :class => "cta-button"%> » <%= link_to "Book Now!", "", :class => "sibling"%> 	
                  </div>
               </div>  
              </div>
					 
					 
					 <% end %>
           
           <%#*<div style="width: 720px;">%>
             <%#*<ul id="slider1">%>
               <%# @category.children.each do |sub_category| %>
                 <%# tour = sub_category.tours.first %>
                 <%# unless tour.nil? %>
                   <%#*<li>%>
                     <%#*<div class="left">%>
                       <%#= link_to tour.name, tours_path(@category, sub_category, tour) %>
                       <%#= link_to image_tag(tour.main_tour_image.attachment.url(:original), :width => '150px', :height => "100px", :border => 0), tours_path(@category, sub_category, tour) %>
                     <%#*</div>%>
                     <%#*<div class="right">%>
                       <%#= sub_category.description.html_safe %>
                     <%#*</div>%>
                   <%#*</li>%>
                 <%# end %>
               <%# end %>
             <%#*</ul>%>
           <%#*</div>%>
         </div>
       </div>
       <div class="right" style="float: right;">
       <div class="section_menu">
         <div class="section_menu_up">
         <h1>IN THIS SECTION</h1>
         </div>
       <div class="section_menu_middle">
         <ul>
           <% @category.children.order("sort_order asc").each do |sub_category| %>
             <li><%= link_to sub_category.name, nested_categories_path(sub_category.parent, sub_category) %></li>
           <% end %> 		    
         </ul>
       </div>
         <div class="section_menu_end"></div>
       </div>
       <%= render :template => "last_minute_offers/multiple_banners", :banners => @banners %>
     </div>
     <div style="clear: both;"></div>
    
  </div>
</div>